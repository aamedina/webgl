(ns webgl.hello-vertex
  (:gen-shader
   :program :vertex
   :attributes [[vec4 pos]
                [vec4 color]
                [float theta]]
   :varyings [[vec4 v-color]])
  (:require [webgl.math :as math]))

(defn -main
  []
  (set! (gl-position) (math/rotate pos theta))
  (set! v-color color))
