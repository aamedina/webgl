(ns webgl.hello-vertex
  (:gen-shader
   :program :vertex
   :attributes [[vec4 pos]
                [float size]
                [float theta]]
   :uniforms [[vec4 translation]])
  (:require [webgl.math :as math]))

(defn -main
  []
  (set! (gl-position) (math/rotate pos theta))
  (set! (gl-point-size) size))
